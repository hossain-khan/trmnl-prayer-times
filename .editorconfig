# EditorConfig helps maintain consistent coding styles across different editors
# See https://editorconfig.org for more information

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# YAML files (settings.yml, custom-fields.yml)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Liquid templates
[*.liquid]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2
