{% comment %}
  QUADRANT LAYOUT - Prayer Times Compact
  Shows Fajr (first prayer) in most compact form
{% endcomment %}

{% assign today = data[0] %}
{% assign timings = today.timings %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}

<div class="layout">
  {% if today and timings.Fajr %}
    <div class="flex flex--col flex--center-x flex--center-y h--full gap--xsmall p--1">
      {% comment %} Show Fajr (first prayer of the day) in quadrant view {% endcomment %}
      <div class="value value--large md:value--xlarge value--tnums">{{ timings.Fajr }}</div>
      <div class="title title--small md:title--medium text--center">Fajr</div>
    </div>
  {% else %}
    {% render "shared", template_name: "error_state", size: "quadrant" %}
  {% endif %}
</div>

{% render "shared", template_name: "title_bar", custom_title: custom_title %}
