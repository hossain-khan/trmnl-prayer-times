{% comment %}
  ============================================================================
  HALF_HORIZONTAL.LIQUID - Half-size Horizontal Layout
  ============================================================================
  Side-by-side prayer times layout for constrained width displays
  Left: Fajr, Dhuhr, Asr
  Right: Maghrib, Isha
  ============================================================================
{% endcomment %}

{% assign prayer_data = data %}
{% assign timings = prayer_data.timings %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}

<div class="layout">
  {% if prayer_data and timings.Fajr %}
    <div class="flex flex--row gap--medium portrait:flex--col h--full p--2">
      {% comment %} Left column: First 3 prayers {% endcomment %}
      <div class="flex flex--col gap--small" style="flex: 1;">
        <div class="text--center">
          <span class="label label--small">Fajr</span>
          <div class="value value--large md:value--xlarge value--tnums">{{ timings.Fajr }}</div>
        </div>
        <div class="divider"></div>
        <div class="text--center">
          <span class="label label--small">Dhuhr</span>
          <div class="value value--large md:value--xlarge value--tnums">{{ timings.Dhuhr }}</div>
        </div>
        <div class="divider"></div>
        <div class="text--center">
          <span class="label label--small">Asr</span>
          <div class="value value--large md:value--xlarge value--tnums">{{ timings.Asr }}</div>
        </div>
      </div>

      {% comment %} Right column: Last 2 prayers {% endcomment %}
      <div class="flex flex--col gap--small" style="max-width: 150px; portrait:max-width: 100%;">
        <div class="text--center">
          <span class="label label--small">Maghrib</span>
          <div class="value value--medium md:value--large value--tnums">{{ timings.Maghrib }}</div>
        </div>
        <div class="divider"></div>
        <div class="text--center">
          <span class="label label--small">Isha</span>
          <div class="value value--medium md:value--large value--tnums">{{ timings.Isha }}</div>
        </div>
      </div>
    </div>
  {% else %}
    {% render "error_state", size: "half" %}
  {% endif %}
</div>

{% render "title_bar", custom_title: custom_title, trmnl: trmnl %}
