{% comment %}
  HALF_HORIZONTAL.LIQUID - Half-size Horizontal Layout
  Side-by-side prayer times layout in a compact table format
{% endcomment %}

{% assign prayer_data = data %}
{% assign timings = prayer_data.timings %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}

<div class="layout">
  {% if prayer_data and timings.Fajr %}
    <div class="flex flex--col h--full p--2">
      {% comment %} Prayer Times Table - Compact {% endcomment %}
      <table class="table table--xsmall" data-table-limit="true">
        <tbody>
          <tr>
            <td><span class="label label--small">Fajr</span></td>
            <td><span class="value value--xsmall value--tnums">{{ timings.Fajr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Dhuhr</span></td>
            <td><span class="value value--xsmall value--tnums">{{ timings.Dhuhr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Asr</span></td>
            <td><span class="value value--xsmall value--tnums">{{ timings.Asr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Maghrib</span></td>
            <td><span class="value value--xsmall value--tnums">{{ timings.Maghrib }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Isha</span></td>
            <td><span class="value value--xsmall value--tnums">{{ timings.Isha }}</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  {% else %}
    {% render "error_state", size: "half" %}
  {% endif %}
</div>

{% render "title_bar", custom_title: custom_title, trmnl: trmnl %}
