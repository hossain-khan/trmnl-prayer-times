{% comment %}
  FULL LAYOUT - Prayer Times Display
  Shows all 5 prayers in a clean table format with date information
{% endcomment %}

{% assign prayer_data = data %}
{% assign timings = prayer_data.timings %}
{% assign gregorian = prayer_data.date.gregorian %}
{% assign hijri = prayer_data.date.hijri %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}
{% assign show_hijri = trmnl.plugin_settings.custom_fields_values.show_hijri_date %}

<div class="layout">
  {% if prayer_data and timings.Fajr %}
    <div class="flex flex--col gap--medium h--full p--2">
      {% comment %} Date Section {% endcomment %}
      <div class="flex flex--row gap--medium flex--center-x">
        <div class="flex flex--col gap--xsmall text--center flex-1">
          <span class="label label--small">{{ gregorian.weekday.en }}</span>
          <span class="title title--medium">{{ gregorian.day }} {{ gregorian.month.en }}</span>
        </div>
        {% if show_hijri %}
        <div class="divider"></div>
        <div class="flex flex--col gap--xsmall text--center flex-1">
          <span class="label label--small">Islamic Date</span>
          <span class="description">{{ hijri.day }} {{ hijri.month.en }}</span>
        </div>
        {% endif %}
      </div>

      {% comment %} Prayer Times Table {% endcomment %}
      <table class="table table--small" data-table-limit="true">
        <tbody>
          <tr>
            <td><span class="label label--small">Fajr</span></td>
            <td><span class="value value--small value--tnums">{{ timings.Fajr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Dhuhr</span></td>
            <td><span class="value value--small value--tnums">{{ timings.Dhuhr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Asr</span></td>
            <td><span class="value value--small value--tnums">{{ timings.Asr }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Maghrib</span></td>
            <td><span class="value value--small value--tnums">{{ timings.Maghrib }}</span></td>
          </tr>
          <tr>
            <td><span class="label label--small">Isha</span></td>
            <td><span class="value value--small value--tnums">{{ timings.Isha }}</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  {% else %}
    {% render "error_state", size: "full" %}
  {% endif %}
</div>

{% render "title_bar", custom_title: custom_title, trmnl: trmnl %}
