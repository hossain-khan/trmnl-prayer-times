{% comment %}
  HALF_VERTICAL.LIQUID - Half-size Vertical Layout
  Wrapping flexbox layout with outlined prayer cards
{% endcomment %}

{% assign prayer_data = data %}
{% assign timings = prayer_data.timings %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}

<div class="layout">
  {% if prayer_data and timings.Fajr %}
    <div class="flex flex--row flex--wrap gap--small p--1" style="justify-content: center;">
      {% comment %} Fajr {% endcomment %}
      <div class="outline flex flex--col flex--center gap--xsmall p--1" style="flex: 0 1 auto; min-width: 75px; text-align: center;">
        <span class="label label--small">Fajr</span>
        <span class="value value--small value--tnums" data-value-fit="true" data-value-fit-max-height="40">{{ timings.Fajr }}</span>
      </div>

      {% comment %} Dhuhr {% endcomment %}
      <div class="outline flex flex--col flex--center gap--xsmall p--1" style="flex: 0 1 auto; min-width: 75px; text-align: center;">
        <span class="label label--small">Dhuhr</span>
        <span class="value value--small value--tnums" data-value-fit="true" data-value-fit-max-height="40">{{ timings.Dhuhr }}</span>
      </div>

      {% comment %} Asr {% endcomment %}
      <div class="outline flex flex--col flex--center gap--xsmall p--1" style="flex: 0 1 auto; min-width: 75px; text-align: center;">
        <span class="label label--small">Asr</span>
        <span class="value value--small value--tnums" data-value-fit="true" data-value-fit-max-height="40">{{ timings.Asr }}</span>
      </div>

      {% comment %} Maghrib {% endcomment %}
      <div class="outline flex flex--col flex--center gap--xsmall p--1" style="flex: 0 1 auto; min-width: 75px; text-align: center;">
        <span class="label label--small">Maghrib</span>
        <span class="value value--small value--tnums" data-value-fit="true" data-value-fit-max-height="40">{{ timings.Maghrib }}</span>
      </div>

      {% comment %} Isha {% endcomment %}
      <div class="outline flex flex--col flex--center gap--xsmall p--1" style="flex: 0 1 auto; min-width: 75px; text-align: center;">
        <span class="label label--small">Isha</span>
        <span class="value value--small value--tnums" data-value-fit="true" data-value-fit-max-height="40">{{ timings.Isha }}</span>
      </div>
    </div>
  {% else %}
    {% render "error_state", size: "half" %}
  {% endif %}
</div>

{% render "title_bar", custom_title: custom_title, trmnl: trmnl %}
