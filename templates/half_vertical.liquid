{% comment %}
  ============================================================================
  HALF_VERTICAL.LIQUID - Half-size Vertical Layout
  ============================================================================
  Vertical list of all 5 prayer times for compact displays
  ============================================================================
{% endcomment %}

{% assign today = data[0] %}
{% assign timings = today.timings %}
{% assign custom_title = trmnl.plugin_settings.custom_fields_values.custom_title %}

<div class="layout">
  {% if today and timings.Fajr %}
    <div class="flex flex--col gap--xsmall h--full p--2">
      {% comment %} Fajr {% endcomment %}
      <div class="flex flex--row flex--between items--center gap--small">
        <span class="label label--small">Fajr</span>
        <span class="value value--small md:value--medium value--tnums">{{ timings.Fajr }}</span>
      </div>
      <div class="divider"></div>

      {% comment %} Dhuhr {% endcomment %}
      <div class="flex flex--row flex--between items--center gap--small">
        <span class="label label--small">Dhuhr</span>
        <span class="value value--small md:value--medium value--tnums">{{ timings.Dhuhr }}</span>
      </div>
      <div class="divider"></div>

      {% comment %} Asr {% endcomment %}
      <div class="flex flex--row flex--between items--center gap--small">
        <span class="label label--small">Asr</span>
        <span class="value value--small md:value--medium value--tnums">{{ timings.Asr }}</span>
      </div>
      <div class="divider"></div>

      {% comment %} Maghrib {% endcomment %}
      <div class="flex flex--row flex--between items--center gap--small">
        <span class="label label--small">Maghrib</span>
        <span class="value value--small md:value--medium value--tnums">{{ timings.Maghrib }}</span>
      </div>
      <div class="divider"></div>

      {% comment %} Isha {% endcomment %}
      <div class="flex flex--row flex--between items--center gap--small">
        <span class="label label--small">Isha</span>
        <span class="value value--small md:value--medium value--tnums">{{ timings.Isha }}</span>
      </div>
    </div>
  {% else %}
    {% render "error_state", size: "half" %}
  {% endif %}
</div>

{% render "title_bar", custom_title: custom_title, trmnl: trmnl %}
